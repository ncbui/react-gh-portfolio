<div class="container d-flex justify-content-center text-center" style="background-color:red;">
    <%= link_to "X", projects_path, :style => "font-size: 24px; float: right; color: white;" %>
    <br />
    <div class="project-card">

    <% if user_signed_in? %>
        <p>
        <strong>Name:</strong>
        <%= @project.name %>
        </p>

        <p>
        <strong>Description:</strong>
        <%= @project.description %>
        </p>

        <p>
        <strong>Demo:</strong>
        <%= @project.demo %>
        </p>

        <p>
        <strong>Github:</strong>
        <%= @project.github %>
        </p>

        <%= link_to "Edit", edit_project_path(@project) %> |
        <%= link_to "Back", projects_path %>
    <% else %>
            <div class="project-carousel col-10 col-md-8">
            <%= image_tag("default.png", :size => "200x200", :alt => "screenshot from project") %>
            </div>
            <div class="project-details col-10 col-md-4 mr-auto">
                <div>
                    <h3>
                    <strong><%= @project.name %></strong>
                    </h3>
                    <p>
                    <%= @project.description %>
                    </p>

                    <p>
                    <%= link_to "Demo", @project.demo %>
                    <%= link_to "GH", @project.github %>
                    </p>
                </div>
            </div>
            
            
        <% end %>
    </div>
</div>