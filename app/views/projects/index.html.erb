
<% if user_signed_in? %>
<div class="container text-center" style="border: 5px double rgb(164, 150, 155,.4); padding: 20px; ">

    <h1>Projects</h1>
    <div class="projects">
        <table class="projects-table">
        <thead>
            <tr>
            <th>Name</th>
            <th>Description</th>
            <th>Demo</th>
            <th>Github</th>
            <th colspan="3"></th>
            </tr>
        </thead>

        <tbody>
            <% @projects.each do |project| %>
            <tr>
                <td><%= project.name %></td>
                <td><%= project.description %></td>
                <td><%= project.demo %></td>
                <td><%= project.github %></td>
                <% if user_signed_in? %>
                    <td><%= link_to "Show", project %></td>
                    <td><%= link_to "Edit", edit_project_path(project) %></td>
                    <td><%= link_to "Destroy", project, method: :delete, data: { confirm: "Are you sure?" } %></td>
                <% end %>
            </tr>
            <% end %>
        </tbody>
            <% if user_signed_in? %>
        <tfoot>
        <tr>
        <td><%= link_to "New Project", new_project_path %> </td>
        </tr>
        </tfoot>
        <% end %>
        </table>

        <br>

    </div>
</div>
<% else %>
<div class="container-fluid" style="height: 80vh; margin-top: -10vh; padding: 20px; background-color: rgb(164, 150, 155, .3);">
    <div class="container-fluid" style=" height: 60vh; bottom: 0; background-color: rgb(164, 150, 155, .4);">
    
    </div>
</div>
<div class="container text-center" style="border: 5px double rgb(164, 150, 155,.4); padding: 20px; ">
    <h1>Projects</h1>
    <p> 
    </p>

    <div class="projects justify-content-between" style="background-color: springgreen;">
            <% @projects.each do |project| %>
                <%= link_to project do %>
                <div class="projects-card" style="position: relative; left: 0; top: 0; display: inline-block;">
                    <%= image_tag "default.png", size: "400x300", :style => "position:relative; top:0px; left:0px;" %>
                    <p style="position: relative; top:0px; left:0px;"                                                                                                                                                                                                 %>
                </div>
                <% end %>
            
            <% end %>

        <br>

    </div>

</div>
<% end %>





